{
  "name": "classroom-clerk",
  "version": "1.0.0",
  "description": "Administer Classroom for git/github project based class",
  "engines": {
    "node": "16.x"
  },
  "main": "./dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon dist/app.js",
    "lint": "eslint  --fix . && prettier --write .",
    "build": "tsc",
    "all": "npm run lint && npm run build && npm run test",
    "prepare": "husky install",
    "start": "npm run build && node ./dist/app.js"
  },
  "lint-staged": {
    "*.(ts|js)": [
      "eslint --fix .",
      "prettier --config  --write"
    ],
    "*.!(ts|js)": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhmmasson/classroom-clerk.git"
  },
  "keywords": [
    "github",
    "education"
  ],
  "author": "dhmmasson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhmmasson/classroom-clerk/issues"
  },
  "homepage": "https://github.com/dhmmasson/classroom-clerk#readme",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prettier-config-standard": "^5.0.0",
    "typescript": "^4.7.4"
  }
}
