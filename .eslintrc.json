{
  "root": true,
  "extends": ["standard"],
  "ignorePatterns": [
    "**/dist/**",
    "clients/**/public/",
    "clients/**/config/",
    "clients/**/scripts/",
    "clients/**"
  ],
  "overrides": [
    {
      "files": "**/*.+(ts|tsx)",

      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.eslint.json"
      },
      "extends": ["standard-with-typescript"]
    }
  ]
}
